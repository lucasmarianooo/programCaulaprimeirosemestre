//importando as bibliotecas
#include <iostream>

//explicitando o namespace
using namespace std;

//fun��o principal
int main() {
	//minha l�gica come�a aqui
	//vari�veis
	float num1, num2, resultado;
	char operacao;
	
	//comandos de entrada
	cout << "Digite o primeiro numero: ";
	cin >> num1;
	
	cout << "Digite o operador (+, -, *, /): ";
	cin >> operacao;
	
	cout << "Digite o segundo numero: ";
	cin >> num2;
	
	//estrutura de decis�o
	switch(operacao){
		case '+':
			resultado = num1 + num2;
			break;
		case '-':
			resultado = num1 - num2;
			break;
		case '*':
			resultado = num1 * num2;
			break;
		case '/':
			resultado = num1 / num2;
			break;
		default:
			cout << "Operacao invalida" << endl;
			return 0;
	}
	
	//sa�da
	cout << "Resultado: " << resultado << endl;
	
	return 0;
}
